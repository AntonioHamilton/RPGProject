{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": [
      "ES6"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@user/*": [
        "./src/modules/user/*"
      ],
      "@room/*": [
        "./src/modules/room/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@libs/*": [
        "./src/libs/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}